<div class="post card">
  <div class="card-header">
    <h2>Create New Post</h2>
  </div>
  <form id="new-post-form" class="card-body">
    <label class="form-label" for="post-title">Title</label>
    <input type="text" id="post-title" name="post-title" class="form-input" />
    <label class="form-label" for="post-body">Content</label>
    <textarea name="post-body" id="post-content" class="form-input"></textarea>
    <button type="submit" class="btn">Create</button>
  </form>
  {{#each posts}}
    <h3>{{post_title}}</h3>
    <h3>{{post_content}}</h3>
  {{/each}}
</div>
<script src="/js/post.js"></script>