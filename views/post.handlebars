<div class="topnav" id="">
  <a href="/">Home</a>
  <a href="/dashboard">Dashboard</a>
  <a href="">Logout</a>
  <p>Your Dashboard</p>
</div>

<div class="post card">
  <button type="button" class="collapsible">Create New Post +</button>
  <div class="content">
    <form id="new-post-form" class="card-body">
      <label class="form-label" for="post-title">Title</label>
      <input type="text" id="post-title" name="post-title" class="form-input" />
      <label class="form-label" for="post-body">Content</label>
      <textarea
        name="post-body"
        id="post-content"
        class="form-input"
      ></textarea>
      <button type="submit" class="btn">Create</button>
    </form>
  </div>
</div>

{{#each posts}}
  <div class="card">
    <div class="card-header">
      <h2>{{post_title}}</h2>
    </div>
    <div id="content" role="tabpanel">
      <p>{{post_content}}</p>
    </div>
  </div>
{{/each}}

